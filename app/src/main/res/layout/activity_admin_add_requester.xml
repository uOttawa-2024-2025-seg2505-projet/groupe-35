<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- Prénom (Optionnel, modifiable) -->
        <EditText
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom (optionnel)"
            android:inputType="textPersonName"
            android:importantForAccessibility="yes"
            android:layout_marginBottom="12dp" />

        <!-- Nom de famille (Optionnel, modifiable) -->
        <EditText
            android:id="@+id/input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de famille (optionnel)"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Adresse électronique (Obligatoire, modifiable, unique) -->
        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse électronique (obligatoire)"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp"
            android:importantForAccessibility="yes"
            android:focusable="true" />

        <!-- Mot de passe (Obligatoire, modifiable) -->
        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe (obligatoire)"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp" />

        <!-- Date et heure de création (Obligatoire, non modifiable) -->
        <TextView
            android:id="@+id/text_creation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créé le : [Date et heure]"
            android:layout_marginBottom="12dp"
            android:enabled="false"
            android:focusable="false"
            android:textColor="@android:color/darker_gray" />

        <!-- Date et heure de modification (Obligatoire, non modifiable) -->
        <TextView
            android:id="@+id/text_modification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dernière modification : [Date et heure]"
            android:layout_marginBottom="12dp"
            android:enabled="false"
            android:focusable="false"
            android:textColor="@android:color/darker_gray" />

        <!-- Bouton Enregistrer -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
